@model ChitChat.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="container" style="margin: 0 400px;">
    <div class="row" style="height: 36px; background:#50a7e6;">
        <div class="col-lg-6" style="color:white;">
            <a href="@Url.Action("Index","Home")"><i id="twitterBird1" class="fa fa-twitter" aria-hidden="true"></i></a>
            <span>Sign Up</span>
        </div>
        <div class="col-lg-6">
            @Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink1" })
        </div>
    </div>
    @*height was 520px*@
    <div class="row" style="height: 280px; background:#fff; padding: 15px 10px;">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class0 = "form-horizontal", role = "form" }))
        {    
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-6 control-label" })
                <div class="col-md-11">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "registerFormField" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-6 control-label" })
                <div class="col-md-11">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @id = "registerFormField" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-6 control-label" })
                <div class="col-md-11">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @id = "registerFormField" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-11">
                    <input id="submitRegister" type="submit" class="btn btn-default" value="Register" />
                </div>
            </div>
        }

    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
